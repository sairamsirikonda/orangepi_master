import time
import serial
import OPi.GPIO as GPIO

GPIO.setwarnings(False)
GPIO.setmode(GPIO.BOARD)
GPIO.setup(7, GPIO.OUT, initial=GPIO.HIGH)

send = serial.Serial(port='/dev/ttyS1', baudrate=9600, parity=serial.STOPBITS_ONE, bytesize=serial.EIGHTBITS, timeout=1)

i = [0, 10, 45, 90, 135, 180, 225, 225, 225, 180, 135, 90, 45, 10, 0]

while True:
    for x in i:
        send.write(bytes([x]))
        print(x)
        time.sleep(1.5)

